@{
    Layout = "_Layout";
}

<h1>Stylist</h1>
<hr />
<h2>Edit Stylist: @Model.GetName()</h2>
<form action="/stylists/@Model.GetId()/edit" method="post">
    <label for="name">Name:</label>
    <input type="text" name="newname" value="@Model.GetName()">
    <label for="stylist">Choose a Stylist:</label>
    <select class="form-group" name="stylist">
        @foreach(var stylist in Model)
        {
        <option value="@stylist.GetId()">@stylist.GetName()</option>
        }
    </select>
    <button type="submit">Edit</button>
</form>
 