@{
    Layout = "_Layout";
}

<div class="container" id="add-container">
    <h1>Enter a new Client!</h1>
    <form class="form" action="/clients/new" method="post">
        <div class="form-group">
            <label for="name">Enter the name of the Client:</label>
            <input type="text" name="name" required>
        </div>
        <div>
            <label for="stylist">Choose a Stylist:</label>
            <select class="form-group" name="stylist" required>
                @foreach(var stylist in Model)
                {
                <option value="@stylist.GetId()">@stylist.GetName()</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-danger" name="button">Add New Client</button>
    </form>
</div>